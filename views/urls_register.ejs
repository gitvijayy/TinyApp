<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./partials/_header.ejs %>
</head>

<body>

  <div class="container">

    <form class="form-inline" action="/<%=type%>" method="POST" style="padding-left: 5%">

      <label for="email"> <strong>Email</strong></label>
      <input class="form-inline" type="email" name="email" style="width: 300px; margin: 1em">
      <strong><label for="password">Password</label></strong>
      <input class="form-inline" type="password" name="password" style="width: 300px; margin: 1em">
      <button type="submit" class="btn btn-dark"><%=type.toUpperCase()%></button>

    </form>

    <br>

    <%if(error !== "n"){%>
    <div class="alert alert-danger" role="alert" style="padding-top: 2%">

      <h2>
        <p class="text-center"><%=error%>!!</p>
      </h2>
      <%error = "n"%>

    </div>
    <%}%> 
      
  </div>

</body>

</html>